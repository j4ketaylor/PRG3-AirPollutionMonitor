<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrescriptionDetails"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/remaining_inhaler_uses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/new_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:text=""
        android:textStyle="bold" />


    <TextView
        android:id="@+id/remaining_inhaler_uses_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prescription_expiration_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prescription_expiration_date_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text=""
        android:textStyle="bold" />


    <EditText
        android:id="@+id/new_prescription_number_of_uses_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:hint="Number of uses"
        android:inputType="number" />

    <EditText
        android:id="@+id/new_prescription_expiry_date_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:ems="10"
        android:hint="Expiry date (DD/MM/YYYY)"
        android:inputType="date" />

    <Button
        android:id="@+id/apply_text_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:backgroundTint="#68BBE3"
        android:layout_centerHorizontal="true"
        android:text="Apply Prescription"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/save_text_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="563dp"
        android:backgroundTint="#0E86D4"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:textColor="@android:color/background_light" />

</RelativeLayout>

