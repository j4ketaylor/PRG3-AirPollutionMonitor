<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrescriptionDetails"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/remaining_inhaler_uses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/remaining_inhaler_uses_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prescription_expiration_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prescription_expiration_date_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text=""
        android:textStyle="bold" />


    <EditText
        android:id="@+id/new_prescription_number_of_uses_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:ems="10"
        android:hint="Enter inhaler uses"
        android:inputType="number" />

    <EditText
        android:id="@+id/new_prescription_expiry_date_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="496dp"
        android:ems="10"
        android:hint="Enter expiry date"
        android:inputType="number" />

    <Button
        android:id="@+id/apply_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="570dp"
        android:backgroundTint="#FF5722"
        android:text="Apply Prescription"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/save_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="630dp"
        android:backgroundTint="#FF9800"
        android:text="Save"
        android:textColor="@android:color/background_light" />


</RelativeLayout>

