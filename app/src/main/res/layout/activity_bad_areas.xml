<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BadAreas">

        <TextView
            android:id="@+id/sorted_areas_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="Areas To Avoid"
            android:textSize="50sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/bad_areas_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="130dp"
            android:textSize="15dp"
            android:text="" />

        <TextView
            android:id="@+id/list_of_areas_unsorted_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="160dp"
            android:textSize="15dp"
            android:text="" />

        <TextView
            android:id="@+id/numbers_of_areas_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="160dp"
            android:textSize="15dp"
            android:text="" />

        <Button
            android:id="@+id/bad_areas_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_more_info"
            android:text="More Information"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black" />

    </RelativeLayout>
</ScrollView>